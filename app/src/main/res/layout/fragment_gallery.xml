<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_pink_light"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/txtTitleGallery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="@string/catalogue"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBlusa"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/blusa"
        app:layout_constraintStart_toStartOf="@+id/txtTitleGallery"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleGallery" />

    <ImageView
        android:id="@+id/imgBroches"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/broches"
        app:layout_constraintStart_toStartOf="@+id/imgBlusa"
        app:layout_constraintTop_toBottomOf="@+id/imgBlusa" />

    <ImageView
        android:id="@+id/imgChamarra"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/chamarra"
        app:layout_constraintStart_toStartOf="@+id/imgBroches"
        app:layout_constraintTop_toBottomOf="@+id/imgBroches" />

    <ImageView
        android:id="@+id/imgFalda"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/falda"
        app:layout_constraintBottom_toBottomOf="@+id/imgBroches"
        app:layout_constraintEnd_toEndOf="@+id/imgSueter" />

    <ImageView
        android:id="@+id/imgLentes"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/lentes"
        app:layout_constraintEnd_toEndOf="@+id/imgFalda"
        app:layout_constraintTop_toBottomOf="@+id/imgFalda" />

    <ImageView
        android:id="@+id/imgSueter"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sueter"
        app:layout_constraintBottom_toBottomOf="@+id/imgBlusa"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleGallery" />

</androidx.constraintlayout.widget.ConstraintLayout>